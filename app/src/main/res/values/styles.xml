<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="android:windowBackground">@color/grey</item>
        <item name="android:textColorPrimary">@color/grey</item>
        <item name="android:fontFamily">@font/open_sans_font</item>

    </style>

    <!--App theme No Action Bar -->
    <style name="AppTheme_NoAction" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="android:windowBackground">@color/grey</item>
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="android:fontFamily">@font/open_sans_font</item>
    </style>

    <!-- Base application theme. No Action Bar -->
    <style name="AppTheme_NoActionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/blue_dark</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/open_sans_font</item>
    </style>

    // TODO --> Selection of parent class
    <style name="editTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:autofillHints" tools:targetApi="o">no</item>
    </style>

    // TODO --> Selection of parent class
    <style name="buttonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="buttonStyleCommon" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/btn_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textViewStyle" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:autoSizeTextType" tools:targetApi="26">uniform</item>
    </style>

    <style name="textViewStyleActionBar" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:autoSizeTextType" tools:targetApi="26">uniform</item>
    </style>

</resources>
